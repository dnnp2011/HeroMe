<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pickPowerFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context=".Fragments.PickPowerFragment"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/pickPowerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:text="Pick A Power"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/turtleOption"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/hero_button"
        android:capitalize="none"
        android:drawableEnd="@drawable/item_selected"
        android:drawableStart="@drawable/turtle_power"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="Turtle Power"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lightningOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickPowerText"
        app:layout_constraintVertical_chainStyle="packed"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/lightningOption"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/hero_button"
        android:capitalize="none"
        android:drawableEnd="@drawable/item_selected"
        android:drawableStart="@drawable/thors_hammer"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="Lightning"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/flightOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turtleOption"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/flightOption"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/hero_button"
        android:capitalize="none"
        android:drawableEnd="@drawable/item_selected"
        android:drawableStart="@drawable/supermancrest_icon"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="Flight"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/webSlingingOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightningOption"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/webSlingingOption"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/hero_button"
        android:capitalize="none"
        android:drawableEnd="@drawable/item_selected"
        android:drawableStart="@drawable/spiderweb"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="Web Slinging"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/laserVisionOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flightOption"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/laserVisionOption"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/hero_button"
        android:capitalize="none"
        android:drawableEnd="@drawable/item_selected"
        android:drawableStart="@drawable/laservision"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="Laser Vision"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/superStrengthOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webSlingingOption"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/superStrengthOption"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/hero_button"
        android:capitalize="none"
        android:drawableEnd="@drawable/item_selected"
        android:drawableStart="@drawable/superstrength"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="Super Strength"
        android:textColor="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/showBackstoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/laserVisionOption"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/showBackstoryButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hero_button"
        android:backgroundTint="@color/colorAccent"
        android:capitalize="none"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:text="SHOW BACKSTORY"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>